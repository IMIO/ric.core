<html metal:use-macro="here/main_template/macros/master">
  <head>
   <title metal:fill-slot="title">Envoi d'e-mail</title>
   <metal:javascript_head_slot fill-slot="javascript_head_slot">
     <script type="text/javascript"
             tal:attributes="src string:$portal_url/++resource++ric_send_mail.js"></script>
   </metal:javascript_head_slot>
  </head>

<body>
<div metal:fill-slot="main">
  <H1>Envoi d'e-mail</H1>

  <span tal:define="result view/send_mail">
    <h2 tal:content="result" />
  </span>

  <form method="post">
    <fieldset>
      <legend>Non-cotisants une année spécifiée</legend>
      <input type="hidden" name="filter" value="non_contributor" />
      Ann&eacute;e: <input type="text" name="option" value="2014" />
      <br />

      <div class="edit_mail_template">
        <a href=""
           tal:attributes="href string:${portal_url}/++rule++non_contributor/++action++0/edit">Modifier la template</a>
      </div>
      <br />
      <input type="submit" value="Envoyer" />
    </fieldset>
  </form>

  <form method="post">
    <fieldset>
      <legend>Envoi à la personne ayant la caractéristique « envoi cotisation »</legend>
      <input type="hidden" name="filter" value="cotisation_person" />

      <div class="edit_mail_template">
        <a href=""
           tal:attributes="href string:${portal_url}/++rule++cotisation_person/++action++0/edit">Modifier la template</a>
      </div>
      <br />
      <input type="submit" value="Envoyer" />
    </fieldset>
  </form>

  <form method="post">
    <fieldset>
      <legend>Envoi à tous les membres d'une organisation</legend>
      <input type="hidden" name="filter" value="organisation_members" />
      Organisation:
      <select name="option">
        <option value="organisation_1">Organisation 1</option>
        <option value="organisation_2">Organisation 2</option>
      </select>
      <br />

      <div class="edit_mail_template">
        <a href=""
           tal:attributes="href string:${portal_url}/++rule++organisation_members/++action++0/edit">Modifier la template</a>
      </div>
      <br />
      <input type="submit" value="Envoyer" />
    </fieldset>
  </form>

  <form method="post">
    <fieldset>
      <legend>Envoi à tous les membres non connectés depuis un nombre de jours spécifié</legend>
      <input type="hidden" name="filter" value="non_connected_members" />
      Jours: <input type="text" name="option" value="0" />
      <br />

      <div class="edit_mail_template">
        <a href=""
           tal:attributes="href string:${portal_url}/++rule++non_connected_members/++action++0/edit">Modifier la template</a>
      </div>
      <br />
      <input type="submit" value="Envoyer" />
    </fieldset>
  </form>

  <form method="post">
    <fieldset>
      <legend>Envoi selon la valeur du champ « envoi mail » d’une personne</legend>
      <input type="hidden" name="filter" value="send_mail_field" />
      <input type="checkbox" name="option" value="contact_cotisation" /> Contact cotisation<br />
      <input type="checkbox" name="option" value="formation" /> Formation<br />

      <div class="edit_mail_template">
        <a href=""
           tal:attributes="href string:${portal_url}/++rule++send_mail_field/++action++0/edit">Modifier la template</a>
      </div>
      <br />
      <input type="submit" value="Envoyer" />
    </fieldset>
  </form>

</div>
</body>
</html>
